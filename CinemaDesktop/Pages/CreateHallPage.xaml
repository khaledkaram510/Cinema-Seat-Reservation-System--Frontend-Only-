<Page x:Class="CinemaDesktop.Pages.CreateHallPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#0B1220">

	<Grid Margin="24">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="420"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Left Card -->
		<Border Background="#0F1A33" CornerRadius="16" Padding="20" Grid.Column="0">
			<StackPanel>
				<TextBlock Text="Create a new Hall" Foreground="White"
                           FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>

				<TextBlock Text="Rows" Foreground="#B7C2E0" Margin="0,12,0,6"/>
				<TextBox x:Name="RowsBox" Height="38" FontSize="14" Padding="10"/>

				<TextBlock Text="Seats per Row" Foreground="#B7C2E0" Margin="0,12,0,6"/>
				<TextBox x:Name="SeatsBox" Height="38" FontSize="14" Padding="10"/>

				<Button Content="Create Hall" Height="42" Margin="0,16,0,0"
                        Click="CreateHall_Click"/>

				<TextBlock x:Name="ResultText" Foreground="#9FE2B2"
                           Margin="0,16,0,0" TextWrapping="Wrap"/>

				<TextBlock x:Name="ErrorText" Foreground="#FF9AA2"
                           Margin="0,10,0,0" TextWrapping="Wrap"/>
			</StackPanel>
		</Border>

		<!-- Right Info -->
		<Border Background="#0F1A33" CornerRadius="16" Padding="20" Grid.Column="1" Margin="18,0,0,0">
			<StackPanel>
				<TextBlock Text="Notes" Foreground="White"
                           FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
				<TextBlock Foreground="#B7C2E0" TextWrapping="Wrap"
                           Text="Hall ID is generated automatically (H-0001, H-0002, ...). After creating a hall, you can directly go to the Booking page and select seats by clicking them."/>
			</StackPanel>
		</Border>
	</Grid>
</Page>
